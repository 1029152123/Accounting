<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1px"
            android:background="@android:color/white">

            <Button
                android:id="@+id/mydialog_numback_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="退格" />

            <EditText
                android:id="@+id/mydialog_num_et"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:maxLength="10"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mydialog_num1_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="1" />

            <Button
                android:id="@+id/mydialog_num2_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="2" />

            <Button
                android:id="@+id/mydialog_num3_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mydialog_num4_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="4" />

            <Button
                android:id="@+id/mydialog_num5_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="5" />

            <Button
                android:id="@+id/mydialog_num6_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mydialog_num7_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="7" />

            <Button
                android:id="@+id/mydialog_num8_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="8" />

            <Button
                android:id="@+id/mydialog_num9_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mydialog_numpoint_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="." />

            <Button
                android:id="@+id/mydialog_num0_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="0" />

            <Button
                android:id="@+id/mydialog_ok_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="确定" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>